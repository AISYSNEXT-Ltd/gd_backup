<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="gd_backup_record_action" model="ir.actions.act_window">
            <field name="name">Backup Record</field>
            <field name="res_model">db.backup</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="dg_backup_record_view_tree" model="ir.ui.view">
            <field name="name">db.backup.tree</field>
            <field name="model">db.backup</field>
            <field name="arch" type="xml">
                <tree string="Backup Records" >
                    <field name="database" />
                    <field name="date_backup" />
                    <field name="actor" />
                </tree>
            </field>
        </record>

        <menuitem
            id="gd_backup_record_menu_action"
            name="GDrive Backup record"
            action="gd_backup_record_action"
            groups="base.group_user"
            sequence="1"/>



        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.gd_backup</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="15" />
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="GDrive Backup" id="gd_backup" string="GDrive Backup" data-key="gd_backup">
                        <h2>Google Drive Settings</h2>

                        <div class="row mt16 o_settings_container" id="gd_backup_setting">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">                                


                                    <div class="o_widget">
                                        <label class="o_form_label " for="gdrive_upload" />
                                        <div class="d-flex">
                                            <field name="gdrive_upload"/>
                                        </div>
                                    </div>

                                    <div class="o_widget">
                                        <label class="o_form_label " for="drive_folder_id" />
                                        <div class="d-flex">
                                            <field name="drive_folder_id"  class="o_input mt8 text-truncate"/>
                                        </div>
                                    </div>

                                    <div class="o_widget">
                                        <label class="o_form_label " for="drive_client_id" />
                                        <div class="d-flex">
                                            <field name="drive_client_id"  class="o_input mt8 text-truncate"/>
                                        </div>
                                    </div>

                                    <div class="o_widget">
                                        <label class="o_form_label " for="drive_client_secret" />
                                        <div class="d-flex">
                                            <field name="drive_client_secret"  class="o_input mt8 text-truncate"/>
                                        </div>
                                    </div>

                                    <div class="o_widget">
                                        <label class="o_form_label " for="master_pwd" />
                                        <div class="d-flex">
                                            <field name="master_pwd"  class="o_input mt8 text-truncate"/>
                                        </div>
                                    </div>

                                    <div class="o_widget">
                                        <label class="o_form_label " for="return_url" />
                                        <div class="d-flex">
                                            <field name="return_url"  class="o_input mt8 text-truncate"/>
                                        </div>
                                    </div>

                                    <div class="o_widget">
                                        <label class="o_form_label " for="backup_format" />
                                        <div class="d-flex">
                                            <field name="backup_format"  />
                                        </div>
                                    </div>


                                    <div class="o_widget">
                                        <div class="d-flex">
                                            <button name="generate_token" class="mt-3 btn btn-primary" string="Generate Token" type="object" />
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>


                        <h2>Backup</h2>

                        <div class="row mt16 o_settings_container" id="gd_backup_setting_buttons">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_widget">
                                    <div class="d-flex">
                                        <button name="clean_backup" class="mt-3 btn btn-danger" string="Clean backup" type="object" />
                                    </div>
                                    <div class="d-flex">
                                        <button name="manual_backup" class="mt-3 btn btn-primary" string="Create Backup" type="object" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        

                    </div>
                </xpath>
            </field>

        </record>

        <record id="gd_backup_config_settings_action" model="ir.actions.act_window">
            <field name="name">GDrive Backup</field>
            <field name="res_model">res.config.settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module': 'gd_backup'}</field>
        </record>

        <menuitem
            id="gd_backup_general_setting_menu"
            name="GDrive Backup"
            action="gd_backup_config_settings_action"
            groups="base.group_system"
            web_icon="gd_backup,static/description/icon.png"
            sequence="15"/>
    </data>
</odoo>
